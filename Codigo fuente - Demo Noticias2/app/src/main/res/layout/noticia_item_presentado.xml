<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/vh_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/txtView_titulo1_pantallaMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/image_rv_id_articulo_pantalla_main"
        app:layout_constraintEnd_toEndOf="@+id/image_rv_id_articulo_pantalla_main"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="@+id/image_rv_id_articulo_pantalla_main" />

    <TextView
        android:id="@+id/txtView_autor1_pantallaMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Textview"
        app:layout_constraintBottom_toTopOf="@+id/txtView_titulo1_pantallaMain"
        app:layout_constraintEnd_toEndOf="@+id/image_rv_id_articulo_pantalla_main"
        app:layout_constraintStart_toStartOf="@+id/image_rv_id_articulo_pantalla_main" />

    <ImageView
        android:id="@+id/image_rv_id_articulo_pantalla_main"
        android:layout_width="150dp"
        android:layout_height="170dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <Spinner
        android:id="@+id/spinner_opciones_Item_noticia"
        android:layout_width="46dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        app:layout_constraintEnd_toEndOf="@+id/image_rv_id_articulo_pantalla_main"
        app:layout_constraintStart_toStartOf="@+id/image_rv_id_articulo_pantalla_main"
        app:layout_constraintTop_toTopOf="@+id/image_rv_id_articulo_pantalla_main" />

</androidx.constraintlayout.widget.ConstraintLayout>