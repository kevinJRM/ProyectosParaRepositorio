<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".a_ui.FragmentNoticiasMain">


    <View
        android:id="@+id/cartel_nombre_de_pantalla"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="#03A9F4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Noticias"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/cartel_nombre_de_pantalla"
        app:layout_constraintEnd_toEndOf="@+id/cartel_nombre_de_pantalla"
        app:layout_constraintStart_toStartOf="@+id/cartel_nombre_de_pantalla"
        app:layout_constraintTop_toTopOf="@+id/cartel_nombre_de_pantalla" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="50dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cartel_nombre_de_pantalla">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvArticulos_noticias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>

    <Button
        android:id="@+id/boton_relevantes"
        android:layout_width="wrap_content"
        android:layout_height="35sp"
        android:layout_marginStart="10dp"
        android:backgroundTint="#03A9F4"
        android:text="Relevantes"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cartel_nombre_de_pantalla" />

    <Button
        android:id="@+id/boton_tendencias"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="#03A9F4"
        android:text="Tendencias"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintStart_toEndOf="@+id/boton_relevantes"
        app:layout_constraintTop_toBottomOf="@+id/cartel_nombre_de_pantalla" />

    <Button
        android:id="@+id/boton_publicados"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="#03A9F4"
        android:text="Publicados"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintStart_toEndOf="@+id/boton_tendencias"
        app:layout_constraintTop_toBottomOf="@+id/cartel_nombre_de_pantalla" />

    <Button
        android:id="@+id/boton_inicio"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#03A9F4"
        android:text="Inicio"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/pared_botones"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

    <Button
        android:id="@+id/boton_ver_mas_tarde"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#03A9F4"
        android:text="Ver mas tarde"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pared_botones"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

    <View
        android:id="@+id/pared_botones"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/boton_ver_mas_tarde"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/boton_inicio"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />


</androidx.constraintlayout.widget.ConstraintLayout>