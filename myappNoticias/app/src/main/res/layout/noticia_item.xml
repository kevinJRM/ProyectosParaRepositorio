<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/fondoNoticia"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:foreground="@drawable/common_google_signin_btn_icon_light_normal_background"
        app:layout_constraintBottom_toBottomOf="@id/vh_separator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/vh_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"

        android:foreground="@drawable/common_google_signin_btn_icon_light_normal_background"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <View
        android:id="@+id/view3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@id/fondoNoticia"
        app:layout_constraintEnd_toEndOf="@id/fondoNoticia"
        app:layout_constraintStart_toStartOf="@id/fondoNoticia"
        app:layout_constraintTop_toTopOf="@id/fondoNoticia" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/view3"
        app:layout_constraintEnd_toEndOf="@id/view3"
        app:layout_constraintStart_toStartOf="@id/view3"
        app:layout_constraintTop_toTopOf="@id/view3"
        app:srcCompat="@drawable/doblado_noticias_de_periodico_con_articulos" />

    <ImageView
        android:id="@+id/image_rv_id_articulo_pantalla_main"
        android:layout_width="150dp"
        android:layout_height="180dp"


        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/view3"
        app:layout_constraintEnd_toEndOf="@id/view3"
        app:layout_constraintStart_toStartOf="@id/view3"
        app:layout_constraintTop_toTopOf="@id/view3" />

    <TextView
        android:id="@+id/indicador_titulo_noticia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Titulo: "
        android:textColor="#050505"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/image_rv_id_articulo_pantalla_main"
        app:layout_constraintStart_toStartOf="@+id/image_rv_id_articulo_pantalla_main"
        app:layout_constraintTop_toTopOf="@+id/image_rv_id_articulo_pantalla_main" />

    <TextView
        android:id="@+id/txtView_titulo1_pantallaMain"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:text="TextView"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/image_rv_id_articulo_pantalla_main"
        app:layout_constraintEnd_toEndOf="@+id/image_rv_id_articulo_pantalla_main"
        app:layout_constraintStart_toStartOf="@+id/image_rv_id_articulo_pantalla_main"
        app:layout_constraintTop_toTopOf="@+id/indicador_titulo_noticia" />


    <TextView
        android:id="@+id/txtView_autor1_pantallaMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Textview"
        android:visibility="invisible"
        tools:layout_editor_absoluteY="22dp" />

    <Button
        android:id="@+id/boton_AbrirNoticia"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@id/fondoNoticia"
        app:layout_constraintEnd_toEndOf="@id/fondoNoticia"
        app:layout_constraintStart_toStartOf="@id/fondoNoticia"
        app:layout_constraintTop_toTopOf="@id/fondoNoticia" />

</androidx.constraintlayout.widget.ConstraintLayout>